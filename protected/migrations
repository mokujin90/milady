ALTER TABLE `News`
	ADD COLUMN `preview_media_id` INT(10) UNSIGNED NULL DEFAULT NULL AFTER `view`,
	ADD CONSTRAINT `FK_News_Media` FOREIGN KEY (`preview_media_id`) REFERENCES `Media` (`id`) ON UPDATE CASCADE ON DELETE CASCADE;

ALTER TABLE `Analytics`
    ADD COLUMN `preview_media_id` INT(10) UNSIGNED NULL DEFAULT NULL AFTER `view`,
    ADD CONSTRAINT `FK_Analytics_Media` FOREIGN KEY (`preview_media_id`) REFERENCES `Media` (`id`) ON UPDATE CASCADE ON DELETE CASCADE;

ALTER TABLE `Event`
    ADD COLUMN `preview_media_id` INT(10) UNSIGNED NULL DEFAULT NULL AFTER `view`,
    ADD CONSTRAINT `FK_Event_Media` FOREIGN KEY (`preview_media_id`) REFERENCES `Media` (`id`) ON UPDATE CASCADE ON DELETE CASCADE;
